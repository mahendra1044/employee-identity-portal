# Frontend environment (Next.js)
# Copy this file to .env.local and adjust per environment.
# Note: Only variables prefixed with NEXT_PUBLIC_ are exposed to the browser.

# Employee "Educate me" guide toggle (env takes precedence over backend features)
# Accepts: 1/0, true/false, on/off, yes/no, enabled/disabled
NEXT_PUBLIC_EDUCATE_GUIDE=true

# Ops Quick Actions tab toggles (frontend build-time). Env overrides backend features.json
NEXT_PUBLIC_QA_PING_DIRECTORY=true
NEXT_PUBLIC_QA_PING_FEDERATE=true
NEXT_PUBLIC_QA_CYBERARK=true
NEXT_PUBLIC_QA_SAVIYNT=true
NEXT_PUBLIC_QA_AZURE_AD=true
NEXT_PUBLIC_QA_PING_MFA=true

# Ops tools buttons (Splunk / CloudWatch) URLs
NEXT_PUBLIC_SPLUNK_URL=https://splunk.company.com
NEXT_PUBLIC_CLOUDWATCH_URL=https://console.aws.amazon.com/cloudwatch/home?region=us-east-1